<h1 class="mt-4">Dashboard</h1>
<p class="lead mb-3">Welcome <%= user.name %></p>
<a href="/users/logout" class="btn btn-secondary">Logout</a>
<h2 class="page-header">Procurar Users</h2>

<form action="/users/welcome" method="GET">
  <div class="form-row">
    <div class="form-item">
  <label>Name</label>
  <input type="text" name="name" value="<%= searchOptions.name %>">
</div>
</div>
<div class="form-row form-row-end">
    <button class="btn btn-primary" type="submit">Pesquisar</button>
  </div>
  </form>
  <br>
  <%  users.forEach(user => { %>
    <div class="author-row">
      <div class="author-name"><%= user.name %> - <%= user.email %></div>
    <div class="btn-row">
      <a class="btn btn-primary" href="/users/<%= user.id %>">Ver</a>
      <a class="btn btn-primary" href="/users/<%= user.id %>/edit">Editar</a>
      <%- include('../partials/deleteForm',
                  { url: `/users/${user.id}` }) %>
    </div>
    </div>
  <%  }) %>
